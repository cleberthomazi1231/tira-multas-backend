{
  "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true, 
        "skipLibCheck": true,
        "outDir": "./build",
        "rootDir": "./src"
  },
    "exclude": [
        "node_modules", 
        "build", 
        "coverage", 
        "**/*.spec.js", 
        "**/*.test.js",
        "vitest.config.js", 
        "vitest-e2e.config.js",
        "knexfile.ts"
    ]
}
